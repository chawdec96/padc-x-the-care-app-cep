<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dr_login_1"
    tools:context=".activities.LoginActivity">

    <EditText
        android:id="@+id/etEmail"
        android:layout_above="@id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Email Account"
        android:layout_margin="@dimen/margin_medium_2"
        />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:layout_above="@id/btnLogin"
        android:layout_margin="@dimen/margin_medium_2"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_xxxlarge"
        android:backgroundTint="@color/accent"
        android:layout_margin="@dimen/margin_medium_2"
        app:cornerRadius="@dimen/margin_medium"
        android:layout_above="@id/btnFacebookSignIn"
        android:text="@string/btn_lbl_login"
        android:textAllCaps="false"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFacebookSignIn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_xxxlarge"
        android:backgroundTint="@color/accent"
        android:layout_margin="@dimen/margin_medium_2"
        android:layout_alignParentBottom="true"
        app:cornerRadius="@dimen/margin_medium"
        android:text="Sign in with facebook"
        android:textAllCaps="false"/>

</RelativeLayout>