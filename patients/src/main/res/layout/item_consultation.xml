<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_medium"
    app:cardCornerRadius="@dimen/margin_medium">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="25/12/2020"
            android:textSize="@dimen/text_regular"
            android:textColor="@color/primary_text"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:layout_marginEnd="@dimen/margin_medium_2"
            />

        <com.padcx.thecareapp.views.components.RoundedCornerImageView
            android:id="@+id/ivDoctorImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/dummy_profile"
            app:cornerRadius="50dp"
            android:layout_below="@id/tvDate"
            android:layout_marginStart="@dimen/margin_medium_2"/>

        <TextView
            android:id="@+id/tvDoctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivDoctorImage"
            android:layout_alignTop="@id/ivDoctorImage"
            android:text="ဒေါက်တာ အောင်နိုင်စိုး"
            android:textSize="@dimen/text_regular"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:paddingStart="@dimen/margin_medium_2"/>

        <TextView
            android:id="@+id/tvDoctorSpeciality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tvDoctorName"
            android:layout_below="@id/tvDoctorName"
            android:paddingStart="@dimen/margin_medium_2"
            android:text="နှလုံးအထူးကု"
            android:textSize="@dimen/text_small"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivDoctorImage"
            android:weightSum="2"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:background="@color/accent">

            <LinearLayout
                android:id="@+id/btnSendText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/margin_large"
                    android:layout_height="@dimen/margin_large"
                    android:src="@drawable/ic_baseline_home_24"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="စာပို့မည်"
                    android:paddingStart="@dimen/margin_medium"
                    android:paddingTop="@dimen/margin_medium"
                    android:paddingBottom="@dimen/margin_medium"
                    android:textSize="@dimen/text_regular"
                    android:textColor="@android:color/white"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnMedicine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/margin_large"
                    android:layout_height="@dimen/margin_large"
                    android:src="@drawable/ic_baseline_sms_24"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/txt_lbl_medicine"
                    android:paddingStart="@dimen/margin_medium"
                    android:paddingTop="@dimen/margin_medium"
                    android:paddingBottom="@dimen/margin_medium"
                    android:textSize="@dimen/text_regular"
                    android:textColor="@android:color/white"
                    />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>